function dir_icon {
  if [[ "$PWD" == "$HOME" ]]; then
    echo "%B%F{blue}%f%b"
  else
    echo "%B%F{blue}%f%b"
  fi
}
NEWLINE=$'\n'
PS1=' %B%F{blue}󰣛%f%b %B%F{white}%n%f%b $(dir_icon)  %B%F{blue}%~%f%b${vcs_info_msg_0_} %(?.%B%F{green}✓%f%b.%F{red}✗)%f%b $NEWLINE %F{cyan}%f '
